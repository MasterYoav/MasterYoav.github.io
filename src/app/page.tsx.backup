              <motion.div 
                className="mt-8 p-4 glass bg-amber-900/20 border border-amber-500/50 rounded-lg"
                initial={{ opacity: 0, y: 20 }}
                animate={{ opacity: 1, y: 0 }}
                transition={{ delay: 0.5 }}
